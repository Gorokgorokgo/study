class Solution {
    public double solution(int[] arr) {
        double answer = 0;
        double sum = 0;
        
        for (int a = 0; a < arr.length; a++)
            if (-10000 <= arr[a] && arr[a] <= 10000)
                sum += arr[a];

        answer = sum / arr.length;
        
        return answer;
    }
}
