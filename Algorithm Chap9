class Solution {
    public int solution(int n) {
        int answer = 0;
        
        boolean check = 0 < n && n <= 1000;
        
        if(check){
            for(int a = 0; a <= n; a++){
                if(a % 2 == 0){
                    answer += a;
                }
            }
        }
        return answer;
    }
}
