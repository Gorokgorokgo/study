class Solution {
    public long[] solution(int x, int n) {
        
        int temp = 0;
        long[] answer = new long[n];

        if ((-10_000_000 <= x && x <= 10_000_000) && (n <= 1000)){
          temp = x;
          for (int a = 0; a < n; a++) {
            answer[a] = x;
            System.out.printf("%d ",answer[a]);
            x += temp;
          }
        }

        return answer;
    }
}
